<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> - Admin Panel</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <link href="../public/css/style.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-custom">
      <div class="container">
        <a class="navbar-brand fw-bold text-primary" href="/products">
          <i class="fas fa-store me-2"></i>Admin Panel
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link active" href="/products">
                <i class="fas fa-box me-1"></i>Products
              </a>
            </li>
            <% if (user && user.role === 'admin') { %>
            <li class="nav-item">
              <a class="nav-link" href="/products/add">
                <i class="fas fa-plus me-1"></i>Add Product
              </a>
            </li>
            <% } %>
          </ul>

          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
              >
                <i class="fas fa-user me-1"></i>
                <%= user ? user.name : 'User' %>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="/profile"
                    ><i class="fas fa-user-edit me-2"></i>Profile</a
                  >
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <form action="/auth/logout" method="POST" class="d-inline">
                    <button type="submit" class="dropdown-item text-danger">
                      <i class="fas fa-sign-out-alt me-2"></i>Logout
                    </button>
                  </form>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="container main-content">
      <!-- Welcome Section -->
      <div class="welcome-card card p-4 mb-4">
        <div class="row align-items-center">
          <div class="col-md-8">
            <h2 class="mb-2">
              Welcome back, <%= user ? user.name : 'User' %>! ðŸ‘‹
            </h2>
            <p class="text-muted mb-0">
              <% if (user && user.role === 'admin') { %> You have admin access.
              Manage your products below. <% } else { %> Browse and view
              products in the catalog. <% } %>
            </p>
          </div>
          <div class="col-md-4 text-md-end">
            <% if (user && user.role === 'admin') { %>
            <a href="/products/add" class="btn btn-custom btn-lg">
              <i class="fas fa-plus me-2"></i>Add New Product
            </a>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Products Section -->
      <div class="card">
        <div class="card-header bg-white">
          <div class="row align-items-center">
            <div class="col">
              <h4 class="mb-0">
                <i class="fas fa-box text-primary me-2"></i>Products
                <span class="badge bg-primary ms-2"
                  ><%= products.length %></span
                >
              </h4>
            </div>
          </div>
        </div>

        <div class="card-body">
          <% if (products && products.length > 0) { %>
          <div class="row">
            <% products.forEach(product => { %>
            <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
              <div class="card product-card h-100">
                <% if (product.image) { %>
                <img
                  src="/<%= product.image %>"
                  class="card-img-top product-image"
                  alt="<%= product.name %>"
                />
                <% } else { %>
                <div
                  class="product-image bg-light d-flex align-items-center justify-content-center"
                >
                  <i class="fas fa-image fa-3x text-muted"></i>
                </div>
                <% } %>

                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= product.name %></h5>
                  <p class="text-muted small mb-2">
                    <span class="badge bg-secondary me-1"
                      ><%= product.category %></span
                    >
                    <span class="badge bg-info me-1"><%= product.brand %></span>
                  </p>
                  <p class="text-muted small mb-2">
                    Size: <strong><%= product.size %></strong> | Color:
                    <strong><%= product.color %></strong>
                  </p>
                  <div class="mt-auto">
                    <div
                      class="d-flex justify-content-between align-items-center"
                    >
                      <h5 class="text-success mb-0">$<%= product.price %></h5>
                      <% if (user && user.role === 'admin') { %>
                      <div class="btn-group" role="group">
                        <a
                          href="/products/edit/<%= product._id %>"
                          class="btn btn-sm btn-primary"
                        >
                          <i class="fas fa-edit"></i> Edit
                        </a>

                        <button
                          onclick="deleteProduct('<%= product._id %>', '<%= product.name %>')"
                          class="btn btn-sm btn-danger"
                        >
                          <i class="fas fa-trash"></i> Delete
                        </button>
                      </div>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
          <% } else { %>
          <div class="text-center py-5">
            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No products found</h4>
            <p class="text-muted">
              Start by adding your first product to the inventory.
            </p>
            <% if (user && user.role === 'admin') { %>
            <a href="/products/add" class="btn btn-custom">
              <i class="fas fa-plus me-2"></i>Add First Product
            </a>
            <% } %>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Delete confirmation script -->
    <script src="/js/all.js"></script>
  </body>
</html>
