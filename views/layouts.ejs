<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> - Admin Panel</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <link href="/css/style.css" rel="stylesheet" />
  </head>
  <body>
    <% if (typeof user !== 'undefined' && user) { %>
    <!-- Sidebar -->
    <nav class="sidebar">
      <div class="p-4">
        <h4 class="navbar-brand">Admin Panel</h4>
        <p class="mb-0 small">Welcome, <%= user.name %></p>
        <small class="text-muted"><%= user.role %></small>
      </div>

      <ul class="nav flex-column px-3">
        <li class="nav-item">
          <a class="nav-link" href="/products">
            <i class="fas fa-box me-2"></i> Products
          </a>
        </li>
        <% if (user.role === 'admin') { %>
        <li class="nav-item">
          <a class="nav-link" href="/products/add">
            <i class="fas fa-plus me-2"></i> Add Product
          </a>
        </li>
        <% } %>
        <li class="nav-item mt-4">
          <a class="nav-link text-danger" href="/auth/logout">
            <i class="fas fa-sign-out-alt me-2"></i> Logout
          </a>
        </li>
      </ul>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
      <div class="container-fluid p-4"><%- body %></div>
    </div>
    <% } else { %>
    <!-- No sidebar for login/register pages -->
    <div class="container-fluid"><%- body %></div>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/all.js"></script>
  </body>
</html>
